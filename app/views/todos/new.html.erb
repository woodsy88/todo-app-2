<h2>I am a new todo</h2>

<% if @todo.errors.any? %>
  <h2>The following errrors prevented the todo from being saved:</h2>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name  %><br>
    <%=  f.text_field :name %>
  </p>
    <p>
    <%= f.label :description %><br>
    <%=  f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>